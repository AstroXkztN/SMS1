<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SMS1</display-name>
  <welcome-file-list>
    <welcome-file>views/login.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- ONE MODULE, ONE SERVLET & SERVLET-MAPPING -->
  <!-- TEMPLATE AS BELOW:  -->
  <servlet>
  	<servlet-name>homeservlet</servlet-name>
  	<servlet-class>com.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>homeservlet</servlet-name>
  	<url-pattern>/homeserv</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>usermaintenanceservlet</servlet-name>
  	<servlet-class>com.servlet.UserMaintenanceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>usermaintenanceservlet</servlet-name>
  	<url-pattern>/updateuser</url-pattern>
  </servlet-mapping>
  
  
  <!-- SERVLET PALACOL -->
  <servlet>
  	<servlet-name>servletpalacol</servlet-name>
  	<servlet-class>com.servlet.ServletPalacol</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>servletpalacol</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
</web-app>